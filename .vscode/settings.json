{
    "phpcs.standard": "WordPress",
    "phpcs.enable": true,
    "phpcs.ignore": "html/",
    "php.suggest.basic": false,
    // Set the default
    "editor.formatOnSave": false,
    // Enable per-language
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "php.validate.enable": false,
    "search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/vendor": true
	}
}